    <!-- our talents -->

      <div class="row">
        <div class="col-12 center textRed">
          <h3>OUR TALENTS</h3>
        </div>
      </div>

      <!-- Cards chefs -->
      <div class="row padding-top">
          <% results.forEach(function(chef){ %>
          <div class="col-12 col-sm-12 col-md-6 col-lg-3 card-direction" >
            <div class="card card_chef card-bkg">
              <img src="/images/<%-  chef.photo  %>" class="card-img-top card_image_chef" alt="...">
              <div class="card-body textWhite">
                <h5 class="card-title"><%-  chef.chef_name  %> <%-  chef.chef_last_name  %></h5>
                <p class="card-text"><%-  chef.chef_description  %></p>
                <a href="/chef/delete/<%-  chef.id_chef  %>" class="btn btn-outline-danger">Delete</a>
                <a href="/chef/id/<%-  chef.id_chef  %>" class="btn btn-outline-success">Go to chef profile</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    
    
      
      <div class="row">
        <div class="col-12">
          <h2 class="textWhite center padding-top textRed">OUR LOVELY FOOD GALLERY</h2>
        </div>
      </div>
      <div class="row padding-top">
        <% resultDish.forEach(function(dish){ %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-2 card-direction">
          <div class="card card_chef card-bkg-trans" style="width: 18rem;">
            <img src="/images/<%-  dish.dish_image  %>" class="card-img-top dish_hover" alt="...">
            <div class="card-body textWhite">
              <h5 class="card-title"><%-  dish.dish_name  %></h5>
              <a href="/chef/id/<%-  dish.id_chef  %>" class="btn btn-outline-danger">Details</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    
      <div class="row">
        <div class="col-12">
          <%- include('form'); %>
        </div>
      </div>


    <!-- cierre container-fluid -->
    </div>


